//======// Utility //=============================================================================//

#include "/lib/utility.inc"

//======// Output //==============================================================================//

flat out float exposure;

//======// Attribute //===========================================================================//

in vec3 vaPosition;

//======// Uniform //=============================================================================//

uniform sampler2D colortex2;

//======// Main //================================================================================//
void main() {
    gl_Position = vec4(vaPosition * 2.0 - 1.0, 1.0);
	exposure = texelFetch(colortex2, ivec2(skyCaptureRes.x, 4), 0).x;
}